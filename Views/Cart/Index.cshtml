@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Giỏ hàng của bạn";
}

<h1>@ViewData["Title"]</h1>

@if (!Model.Any())
{
    <p>Giỏ hàng của bạn đang trống.</p>
}
else
{
    <form asp-action="Checkout" method="post">
        <table class="table">
            <thead>
                <tr>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Số lượng mua</th>
                    <th>Giá</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="@item.Product.ImageUrl" alt="@item.Product.Title" style="max-width: 100px;" /></td>
                        <td>@item.Product.Title</td>
                        <td>
                            <div class="quantity-control">
                                <button type="button" class="btn btn-outline-secondary btn-decrease" onclick="decreaseQuantity(@item.Product.Id)">-</button>
                                <input type="number" id="quantity-@item.Product.Id" name="quantities[@item.Product.Id]" value="@item.Quantity" min="1" max="@item.Product.Quantity" class="form-control quantity-input" onchange="updateQuantity(@item.Product.Id)"/>
                                <button type="button" class="btn btn-outline-secondary btn-increase" onclick="increaseQuantity(@item.Product.Id)">+</button>
                            </div>
                        </td>

                        <td>$@item.Product.Price</td>
                        <td>
                            <a asp-action="RemoveFromCart" asp-route-id="@item.Product.Id" class="btn btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="checkout-container">
            <button type="submit" class="btn btn-success btn-checkout">Thanh toán</button>
        </div>
    </form>
}
