@model IEnumerable<MvcLaptop.Models.Laptop>
@{
    ViewData["Title"] = "Home";
}

<div class="text-left">
    <h1 class="display-8">Computer Zone</h1>
</div>
<div class="product-grid">
@foreach (var item in Model) {
    <div class="product-card">
        <img src="@item.ImageUrl" alt="@item.Title" class="product-image" />
        <h3 class="product-title">@item.Title</h3>
        <p class="product-genre">@item.Genre</p>
        <p class="product-price">$@item.Price</p>
    </div>
}
</div>
<style>
    .product-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 20px;
        margin-top: 20px;
    }

    .product-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 15px;
        text-align: center;
        background-color: #f9f9f9;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .product-image {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    .product-title {
        font-size: 18px;
        margin: 10px 0;
        color: #333;
        min-height: 48px; /* Đảm bảo đủ chiều cao cho 2 dòng */
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .product-genre {
        font-size: 14px;
        color: #555;
    }

    .product-price {
        font-size: 16px;
        color: #007BFF;
        font-weight: bold;
    }
</style>
