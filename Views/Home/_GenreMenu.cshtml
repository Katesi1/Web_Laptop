@model IEnumerable<string>

<ul class="genre-menu-list">
    @foreach (var genre in Model)
    {
        <li class="genre-menu-item">
            <a class="genre-menu-link" asp-controller="Laptops" asp-action="Index" asp-route-genre="@genre">
                @genre
            </a>
        </li>
    }
</ul>
<style>
    .genre-menu-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
        display: flex;
        gap: 15px;
    }

    .genre-menu-item {
        display: inline;
    }

    .genre-menu-link {
        text-decoration: none;
        color: #333;
        font-size: 16px;
        padding: 5px 10px;
        border-radius: 3px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .genre-menu-link:hover {
        background-color: #007bff;
        color: #fff;
    }
</style>